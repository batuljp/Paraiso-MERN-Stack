<%- include('partials/header') %>


    <div class="container">

      <div class="p-5 mb-4 bg-light rounded-3">
        <div class="container-fluid py-5">
          <h1 class="display-5 fw-bold">Paraiso</h1>
          <p class="col-md-8 fs-4">Selected list of Properties</p>
          <a href="/properties/new" class="btn btn-primary btn-lg" type="button">Add property</a>
        </div>
      </div>

      <div class="row">

        <% properties.forEach(function(property){ %>

        <div class="card" style="width: 18rem;">
          <img src="<%= property.img %>" class="thumbnail" alt="..." style="width:200px; height:200px">
          <div class="card-body">
            <h5 class="card-title"><%= property.title %></h5>
            <p class="card-text"><%= property.description %></p>
            <a href="properties/<%= property._id %>" class="btn btn-primary">Show details</a>
          </div>
        </div>

        <% }); %>


      </div>

      <%- include('partials/footer') %>
  


    </div>




